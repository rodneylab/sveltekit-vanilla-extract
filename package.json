{
	"name": "sveltekit-vanilla-extract",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Using vanilla-extract with SvelteKit: how you can make zero-runtime stylesheets with the new TypeScript friendly preprocessor in Svelte.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .prettierignore --write --plugin=prettier-plugin-svelte .",
		"prepare": "husky install",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte .",
		"svelte-check": "svelte-check --fail-on-hints"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/js": "^9.16.0",
		"@fontsource/source-sans-pro": "^5.1.0",
		"@fontsource/source-serif-pro": "^5.1.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "2.9.0",
		"@typescript-eslint/eslint-plugin": "^8.16.0",
		"@typescript-eslint/parser": "^8.16.0",
		"@vanilla-extract/css": "^1.16.1",
		"@vanilla-extract/css-utils": "^0.1.4",
		"@vanilla-extract/vite-plugin": "4.0.18",
		"commitlint": "^19.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"prettier": "~3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"sharp": "^0.33.5",
		"svelte": "^5.3.1",
		"svelte-check": "^4.1.0",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"vanilla-lazyload": "^19.1.3",
		"vite": "^6.0.2",
		"vite-imagetools": "^7.0.5"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-vanilla-extract"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-vanilla-extract/issues"
	},
	"dependencies": {
		"@sveltejs/vite-plugin-svelte": "^5.0.1"
	},
	"peerDependencies": {
		"vite": "^5.4.11"
	}
}
